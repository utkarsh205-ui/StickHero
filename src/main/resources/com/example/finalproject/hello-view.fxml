<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalproject.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText"/>
  <Button onAction="#onPlayButtonClick" style="-fx-background-color: null;">
    <graphic>
      <StackPane>
        <Circle fill="darkorange" radius="99.9" />
        <Label layoutY="30.0" text="PLAY" style="-fx-font-size: 24px;" /> <!-- Increased the font size -->
      </StackPane>
    </graphic>
  </Button>
</VBox>
